package com.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import com.classes.Carros;
import com.interfaces.CarrosInter;
import com.model.ConnectionFactory;

public class CarrosDao implements CarrosInter{
	
	@Override
	public int inserirCarro() {
		// TODO Auto-generated method stub
		return 0;
	}
	
	@Override
	public int inserirCarro(Carros car) {
		
		Connection conn = ConnectionFactory.getConnection();
		int codigo = 0;
		
		try(PreparedStatement ps = conn.prepareStatement("INSERT INTO carros(codigo, modelo, marca) values (?, ?, ?)", Statement.RETURN_GENERATED_KEYS)){
			
			ps.setString(1, null);
			ps.setString(2, car.getModelo());
			ps.setString(3, car.getMarca());
			
			int rows = ps.executeUpdate();
			
			if(rows != 0) {
				
				ResultSet rss = ps.getGeneratedKeys();
				
				if(rss.next()) {
					System.out.printf("inseriodo retorno codigo : %d", rss.getInt(1));
					codigo = rss.getInt(1);
				}
			}
			
		}catch(SQLException e) {
			System.out.println(e.getMessage());
		}
		
		return codigo;
	}



}
